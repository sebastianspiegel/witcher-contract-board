<%= form_for(@contract) do |f| %>
    <%= f.label :details %>
    <%= f.text_area :details %><br>
    <%= f.label :reward %>
    <%= f.number_field :reward, step: 1, min: 5 %><br><br>
    <%= render partial: "monster_fields", locals: {f: f} %>
    <br><br>
    <%= render partial: "location_fields", locals: {f: f} %>
    <br><br>
    <%= f.submit %> 
<% end %>