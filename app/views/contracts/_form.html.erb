<%= form_for(@contract) do |f| %>
    <%= f.label :details %>
    <%= f.text_area :details %><br>
    <%= f.label :reward %>
    <%= f.number_field :reward, step: 1, min: 5 %><br><br>
    <%= f.label :monster %><br>
    <%= monster_form_fields(f) %><br><br>
    <%= f.label :location %><br>
    <%= location_form_fields(f) %><br><br>
    <%= f.submit %> 
<% end %>
