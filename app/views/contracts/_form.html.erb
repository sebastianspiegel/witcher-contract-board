<%= form_for(@contract) do |f| %>
    <%= f.label :reward %>
    <%= f.number_field :reward, step: 1, min: 5 %><br>
    <%= f.label :details %>
    <%= f.text_field :details %><br>
    <%= f.label :monster %>
    <%= monster_form_fields(f) %>
    <%= f.location %>
    <%= location_form_fields(f) %>
    <%= f.submit %> 
<% end %>
