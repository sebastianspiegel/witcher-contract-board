<% if flash[:message] %>
    <div class=loginmessage><%= flash[:message] %></div>
<% end %>

<div class="moveurass">
<h2>Sign in</h2>

<div class="form-group">
<%= form_tag ({controller: 'sessions', action: 'create', method: 'post'}) do %>
    Name: <br>
    <%= text_field(:user, :name) %><br>
    Password: <br>
    <%= password_field(:user, :password) %><br>
    <div class="btn btn-primary"><%= submit_tag 'Sign In' %></div>
<% end %> 
</div>
<br>
<div class="btn btn-primary"><%= button_to "Log in with Google", '/auth/google_oauth2'  %></div>
<br>
<div class="btn btn-primary"><%= link_to "Sign up", new_user_path %></div>
</div>